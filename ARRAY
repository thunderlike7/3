TTL 16-BIT ARRAY ADDITION
AREA PROG4, CODE, READONLY
ENTRY
START
LDR R0, =ARRAY 
LDR R5, =SUM
MOV R1, #0 
MOV R4, #0 
NEXT CMP R1, #4 
BEQ STORE
LDRH R3, [R0], #2 
ADC R4,R4,R3 
ADD R1, R1, #1 
B NEXT
STORE STR R4, [R5]
STOP B STOP
AREA DATA1, DATA, READONLY
ARRAY DCW 10,20,30,40
AREA DATA2, DATA, READWRITE
SUM DCD 0
END
